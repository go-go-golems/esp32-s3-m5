menu "0049: ESP32-C6 MLED Node"

config MLEDNODE_WIFI_MAX_RETRY
    int "Wi-Fi max retries"
    range 0 100
    default 10
    help
        Maximum number of retries after a STA disconnect when autoconnect is enabled.

config MLEDNODE_WIFI_AUTOCONNECT_ON_BOOT
    bool "Autoconnect on boot when credentials exist"
    default y
    help
        If enabled, and runtime credentials are present at STA start (e.g. loaded from NVS),
        the device will attempt to connect automatically.

config MLEDNODE_WS281X_GPIO_NUM
    int "WS281x data GPIO (XIAO D1 default)"
    range 0 48
    default 1
    help
        Data output GPIO used to drive the strip.

        For Seeed XIAO ESP32C6, D1 maps to GPIO1.

config MLEDNODE_WS281X_LED_COUNT
    int "WS281x LED count"
    range 1 1024
    default 50
    help
        Number of addressable LEDs in the chain.

config MLEDNODE_WS281X_FRAME_MS
    int "WS281x animation frame time (ms)"
    range 1 1000
    default 16
    help
        Delay between frames. Lower is smoother but uses more CPU.

config MLEDNODE_WS281X_T0H_NS
    int "WS281x T0H (ns)"
    range 50 2000
    default 350
    help
        High time for a logical 0 bit.

config MLEDNODE_WS281X_T0L_NS
    int "WS281x T0L (ns)"
    range 50 2000
    default 800
    help
        Low time for a logical 0 bit.

config MLEDNODE_WS281X_T1H_NS
    int "WS281x T1H (ns)"
    range 50 2000
    default 700
    help
        High time for a logical 1 bit.

config MLEDNODE_WS281X_T1L_NS
    int "WS281x T1L (ns)"
    range 50 2000
    default 600
    help
        Low time for a logical 1 bit.

config MLEDNODE_WS281X_RESET_US
    int "WS281x reset time (us)"
    range 10 500
    default 80
    help
        Low reset time after sending a frame.

endmenu
