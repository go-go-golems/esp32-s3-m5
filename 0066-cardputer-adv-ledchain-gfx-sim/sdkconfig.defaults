# Tutorial 0066 defaults (ESP-IDF 5.4.x)
#
# Cardputer-ADV-style defaults for a console-driven M5GFX app.
#

# Flash size: Cardputer/ADV is commonly 8MB.
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"

# Partition table: project-local partitions.csv (factory 4M + storage 1M).
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

# CPU frequency: common default for Cardputer demos.
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Main task stack: C++ + M5GFX can be stack-hungry.
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8000

# Prefer USB Serial/JTAG for the interactive console on Cardputer/ADV.
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y
CONFIG_ESP_CONSOLE_UART_DEFAULT=n
CONFIG_ESP_CONSOLE_UART_CUSTOM=n
CONFIG_ESP_CONSOLE_USB_CDC=n

# Enable esp_http_server WebSocket support for the on-device JS Web IDE.
CONFIG_HTTPD_WS_SUPPORT=y

# Tutorial defaults:
CONFIG_TUTORIAL_0066_LED_COUNT=50
CONFIG_TUTORIAL_0066_FRAME_MS=16
CONFIG_TUTORIAL_0066_CANVAS_USE_PSRAM=n
CONFIG_TUTORIAL_0066_PRESENT_WAIT_DMA=y
