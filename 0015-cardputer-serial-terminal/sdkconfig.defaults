# Tutorial 0015 defaults (ESP-IDF 5.4.1)
#
# Reproducible, board-appropriate defaults for Cardputer.
#

# Flash size: Cardputer is commonly 8MB.
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"

# Partition table: project-local partitions.csv (factory 4M + storage 1M).
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

# CPU frequency: Cardputer demos usually run at 240MHz.
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Main task stack: M5GFX is C++ and can be stack-hungry.
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8000

# Tutorial defaults:
CONFIG_TUTORIAL_0015_PRESENT_WAIT_DMA=y
CONFIG_TUTORIAL_0015_CANVAS_USE_PSRAM=n
CONFIG_TUTORIAL_0015_LOG_EVERY_N_EVENTS=0
CONFIG_TUTORIAL_0015_MAX_LINES=256

# Serial backend defaults:
CONFIG_TUTORIAL_0015_BACKEND_USB_SERIAL_JTAG=y
CONFIG_TUTORIAL_0015_LOCAL_ECHO=y
CONFIG_TUTORIAL_0015_SHOW_RX=y
CONFIG_TUTORIAL_0015_NEWLINE_CRLF=y
CONFIG_TUTORIAL_0015_BS_SEND_DEL=y

# UART defaults (only used when UART backend is selected):
CONFIG_TUTORIAL_0015_UART_NUM=1
CONFIG_TUTORIAL_0015_UART_BAUD=115200
CONFIG_TUTORIAL_0015_UART_TX_GPIO=2
CONFIG_TUTORIAL_0015_UART_RX_GPIO=1

# Keyboard scan defaults (Cardputer):
CONFIG_TUTORIAL_0015_SCAN_PERIOD_MS=10
CONFIG_TUTORIAL_0015_DEBOUNCE_MS=30
CONFIG_TUTORIAL_0015_SCAN_SETTLE_US=30
CONFIG_TUTORIAL_0015_AUTODETECT_IN01=y
CONFIG_TUTORIAL_0015_KB_ALT_IN0_GPIO=1
CONFIG_TUTORIAL_0015_KB_ALT_IN1_GPIO=2
CONFIG_TUTORIAL_0015_DEBUG_RAW_SCAN=n
CONFIG_TUTORIAL_0015_LOG_KEY_EVENTS=n
CONFIG_TUTORIAL_0015_KB_OUT0_GPIO=8
CONFIG_TUTORIAL_0015_KB_OUT1_GPIO=9
CONFIG_TUTORIAL_0015_KB_OUT2_GPIO=11
CONFIG_TUTORIAL_0015_KB_IN0_GPIO=13
CONFIG_TUTORIAL_0015_KB_IN1_GPIO=15
CONFIG_TUTORIAL_0015_KB_IN2_GPIO=3
CONFIG_TUTORIAL_0015_KB_IN3_GPIO=4
CONFIG_TUTORIAL_0015_KB_IN4_GPIO=5
CONFIG_TUTORIAL_0015_KB_IN5_GPIO=6
CONFIG_TUTORIAL_0015_KB_IN6_GPIO=7



