# Tutorial 0016 defaults (ESP-IDF 5.4.1)
#
# Reproducible defaults for AtomS3R.
#

# Flash size: AtomS3R commonly 8MB.
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"

# CPU frequency: demos usually run at 240MHz.
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Main task stack: C++ + M5GFX can be stack-hungry.
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8000

# Use USB Serial/JTAG as the primary console channel (control plane).
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y
CONFIG_ESP_CONSOLE_UART_DEFAULT=n
CONFIG_ESP_CONSOLE_UART_CUSTOM=n
CONFIG_ESP_CONSOLE_USB_CDC=n

# UI defaults (AtomS3R GC9107, 128x128 window in 128x160 RAM)
CONFIG_TUTORIAL_0016_LCD_HRES=128
CONFIG_TUTORIAL_0016_LCD_VRES=128
CONFIG_TUTORIAL_0016_LCD_X_OFFSET=0
CONFIG_TUTORIAL_0016_LCD_Y_OFFSET=32
CONFIG_TUTORIAL_0016_LCD_SPI_PCLK_HZ=40000000
CONFIG_TUTORIAL_0016_LCD_INVERT=n
CONFIG_TUTORIAL_0016_LCD_RGB_ORDER_RGB=n
CONFIG_TUTORIAL_0016_CANVAS_USE_PSRAM=n
CONFIG_TUTORIAL_0016_PRESENT_USE_DMA=y

# Backlight defaults (AtomS3R commonly uses both gate GPIO and I2C brightness device).
CONFIG_TUTORIAL_0016_BACKLIGHT_GATE_ENABLE=y
CONFIG_TUTORIAL_0016_BACKLIGHT_GATE_GPIO=7
CONFIG_TUTORIAL_0016_BACKLIGHT_GATE_ACTIVE_LOW=y
CONFIG_TUTORIAL_0016_BACKLIGHT_I2C_ENABLE=y
CONFIG_TUTORIAL_0016_BL_I2C_SCL_GPIO=0
CONFIG_TUTORIAL_0016_BL_I2C_SDA_GPIO=45
CONFIG_TUTORIAL_0016_BL_I2C_ADDR=0x30
CONFIG_TUTORIAL_0016_BL_I2C_REG=0x0e
CONFIG_TUTORIAL_0016_BL_BRIGHTNESS_ON=255

# Console + UI behavior
CONFIG_TUTORIAL_0016_CONSOLE_PROMPT="sig> "
CONFIG_TUTORIAL_0016_UI_REFRESH_MS=100
CONFIG_TUTORIAL_0016_DEFAULT_ACTIVE_PIN=2



