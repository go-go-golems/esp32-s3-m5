# AtomS3R camera streaming firmware defaults.
CONFIG_IDF_TARGET_ESP32S3=y

# Console: USB Serial/JTAG (keep UART free).
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y
# CONFIG_ESP_CONSOLE_UART is not set
CONFIG_ESP_CONSOLE_SECONDARY_NONE=y

# PSRAM (match ATOMS3R-CAM demo).
CONFIG_SPIRAM=y
CONFIG_SPIRAM_MODE_OCT=y
CONFIG_SPIRAM_TYPE_AUTO=y
CONFIG_SPIRAM_CLK_IO=30
CONFIG_SPIRAM_CS_IO=26
CONFIG_SPIRAM_SPEED_80M=y
CONFIG_SPIRAM_BOOT_INIT=y
CONFIG_SPIRAM_USE_MALLOC=y
CONFIG_SPIRAM_MEMTEST=y
CONFIG_SPIRAM_ALLOW_STACK_EXTERNAL_MEMORY=y
CONFIG_SPIRAM_MALLOC_ALWAYSINTERNAL=6384
CONFIG_SPIRAM_MALLOC_RESERVE_INTERNAL=32768

# Camera (match ATOMS3R-CAM demo).
CONFIG_CAMERA_MODULE_M5STACK_ATOMS3R_CAM=y
CONFIG_CAMERA_XCLK_FREQ=20000000
CONFIG_CAMERA_CONVERTER_ENABLED=y
CONFIG_SCCB_HARDWARE_I2C_PORT1=y
CONFIG_SCCB_CLK_FREQ=100000
CONFIG_CAMERA_TASK_STACK_SIZE=2048
CONFIG_CAMERA_CORE0=y
# CONFIG_CAMERA_CORE1 is not set
# CONFIG_CAMERA_NO_AFFINITY is not set
CONFIG_CAMERA_DMA_BUFFER_SIZE_MAX=32768
CONFIG_CAMERA_JPEG_MODE_FRAME_SIZE_AUTO=y
# CONFIG_CAMERA_JPEG_MODE_FRAME_SIZE_CUSTOM is not set
CONFIG_ATOMS3R_CAMERA_POWER_ACTIVE_LOW=y

# Stream defaults.
CONFIG_ATOMS3R_SENSOR_JPEG_QUALITY=14
CONFIG_ATOMS3R_CONVERT_JPEG_QUALITY=80

# Room for camera/websocket tasks.
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8192

# Logs.
CONFIG_LOG_DEFAULT_LEVEL_INFO=y
