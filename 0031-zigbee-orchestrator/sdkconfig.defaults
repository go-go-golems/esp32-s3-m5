# Ticket 0031 defaults (ESP-IDF 5.4.x)

CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"

CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

CONFIG_ESP_MAIN_TASK_STACK_SIZE=8000

# Use USB Serial/JTAG as the primary console channel (Cardputer-friendly).
CONFIG_ESP_CONSOLE_USB_SERIAL_JTAG=y
CONFIG_ESP_CONSOLE_UART_DEFAULT=n
CONFIG_ESP_CONSOLE_UART_CUSTOM=n
CONFIG_ESP_CONSOLE_USB_CDC=n

# 0031 application defaults.
CONFIG_GW_EVENT_QUEUE_SIZE=64
CONFIG_GW_MONITOR_MAX_LINES_PER_SEC=50
CONFIG_GW_CONSOLE_PROMPT="gw> "

# Zigbee host+NCP link (Unit Gateway H2 via Cardputer Grove UART pins).
# Wiring:
#   H2 TX -> Cardputer G1 (GPIO1)  [host RX]
#   H2 RX -> Cardputer G2 (GPIO2)  [host TX]
CONFIG_HOST_BUS_MODE_UART=y
CONFIG_HOST_BUS_UART_NUM=1
CONFIG_HOST_BUS_UART_RX_PIN=1
CONFIG_HOST_BUS_UART_TX_PIN=2
CONFIG_HOST_BUS_UART_BAUD_RATE=115200
