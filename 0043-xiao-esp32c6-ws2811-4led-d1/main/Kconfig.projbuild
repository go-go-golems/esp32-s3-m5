menu "MO-031: WS2811 (RMT) test"

config MO031_WS281X_GPIO_NUM
    int "Data GPIO (XIAO D1 default)"
    range 0 48
    default 1
    help
        Data output GPIO used to drive the strip.

        For Seeed XIAO ESP32C6, D1 maps to GPIO1.

config MO031_WS281X_LED_COUNT
    int "LED count"
    range 1 1024
    default 10
    help
        Number of addressable LEDs in the chain.

config MO031_WS281X_BRIGHTNESS_PCT
    int "Brightness (%)"
    range 1 100
    default 25
    help
        Simple brightness scaler applied to RGB values before sending.

config MO031_INTENSITY_MIN_PCT
    int "Intensity min (%)"
    range 1 100
    default 5
    help
        Minimum intensity when modulation is enabled.

config MO031_INTENSITY_PERIOD_MS
    int "Intensity period (ms)"
    range 100 60000
    default 2500
    help
        Period of the intensity modulation waveform.

config MO031_ANIM_FRAME_MS
    int "Animation frame time (ms)"
    range 1 1000
    default 16
    help
        Delay between frames. Lower is smoother but uses more CPU.

config MO031_RAINBOW_SPEED
    int "Rainbow speed (1-10)"
    range 1 10
    default 5
    help
        Speed of the rainbow rotation. Higher is faster.

config MO031_RAINBOW_SATURATION
    int "Rainbow saturation (0-100)"
    range 0 100
    default 100
    help
        Color saturation. 0 yields white/gray.

config MO031_RAINBOW_SPREAD_X10
    int "Rainbow spread (x10)"
    range 1 50
    default 10
    help
        Controls how much hue range is distributed across the strip.
        10 means 1.0x (full 360 degrees across the strip).

config MO031_WS281X_T0H_NS
    int "T0H (ns)"
    range 50 2000
    default 350
    help
        High time for a logical 0 bit.

config MO031_WS281X_T0L_NS
    int "T0L (ns)"
    range 50 2000
    default 800
    help
        Low time for a logical 0 bit.

config MO031_WS281X_T1H_NS
    int "T1H (ns)"
    range 50 2000
    default 700
    help
        High time for a logical 1 bit.

config MO031_WS281X_T1L_NS
    int "T1L (ns)"
    range 50 2000
    default 600
    help
        Low time for a logical 1 bit.

config MO031_WS281X_RESET_US
    int "Reset time (us)"
    range 10 500
    default 80
    help
        Low reset time after sending a frame.

endmenu
