# Tutorial 0014 defaults (ESP-IDF 5.4.1)
#
# Reproducible, board-appropriate defaults for AtomS3R.
#

# Flash size: AtomS3R is commonly 8MB.
CONFIG_ESPTOOLPY_FLASHSIZE_8MB=y
CONFIG_ESPTOOLPY_FLASHSIZE="8MB"

# Partition table: project-local partitions.csv (factory 4M + storage 1M).
CONFIG_PARTITION_TABLE_CUSTOM=y
CONFIG_PARTITION_TABLE_CUSTOM_FILENAME="partitions.csv"
CONFIG_PARTITION_TABLE_FILENAME="partitions.csv"

# CPU frequency: AtomS3(R) demos usually run at 240MHz.
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ_240=y
CONFIG_ESP_DEFAULT_CPU_FREQ_MHZ=240

# Main task stack: M5GFX is C++ and can be stack-hungry.
CONFIG_ESP_MAIN_TASK_STACK_SIZE=8000

# Tutorial defaults (match known-good bring-up from tutorial 0010):
CONFIG_TUTORIAL_0014_LCD_Y_OFFSET=32
CONFIG_TUTORIAL_0014_LCD_SPI_PCLK_HZ=40000000
CONFIG_TUTORIAL_0014_CANVAS_USE_PSRAM=n
CONFIG_TUTORIAL_0014_PRESENT_USE_DMA=y
CONFIG_TUTORIAL_0014_BACKLIGHT_GATE_ENABLE=y
CONFIG_TUTORIAL_0014_BACKLIGHT_GATE_GPIO=7
CONFIG_TUTORIAL_0014_BACKLIGHT_GATE_ACTIVE_LOW=y
CONFIG_TUTORIAL_0014_BACKLIGHT_I2C_ENABLE=y
CONFIG_TUTORIAL_0014_BL_I2C_SCL_GPIO=0
CONFIG_TUTORIAL_0014_BL_I2C_SDA_GPIO=45
CONFIG_TUTORIAL_0014_BL_I2C_ADDR=0x30
CONFIG_TUTORIAL_0014_BL_I2C_REG=0x0e
CONFIG_TUTORIAL_0014_BL_BRIGHTNESS_ON=255
CONFIG_TUTORIAL_0014_LOG_EVERY_N_FRAMES=60

# GIF render harness defaults:
CONFIG_TUTORIAL_0014_GIF_USE_COOKED=y
CONFIG_TUTORIAL_0014_GIF_SWAP_BYTES=y
CONFIG_TUTORIAL_0014_GIF_SCALE_TO_FULL_SCREEN=y



